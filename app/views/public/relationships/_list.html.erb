<% if users.exists? %>
  <% users.each do |user| %>
    <div class="card d-flex">
      <div class="flex">
        <%= link_to user_path(user) do %>
          <%= image_tag user.get_profile_image, size:"80x80", class: "rounded-circle" %>
          <p><%= user.name %></p>
          <p>フォロー数: <%= user.followings.count %></p>
          <p>フォロワー数: <%= user.followers.count %></p>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>