<% @entries.each do |e| %>
  <% if @myUserId != e.user.id %>
      <h2><%= e.user.name %>さんとのトークルーム</h2>
    </div>
  <% end %>
<% end %>
<%= link_to "ユーザー一覧に戻る", user_path %>

  <% if @messages.present? %>
    <% @messages.each do |m| %>
      <% @myUserId == m.user.id  %>
      <p><%= m.user.name %></p>
      <p><%= m.message %></p>
    <% end %>
  <% end %>

<%= form_with model: @message do |f| %>
  <%= f.text_field :body, placeholder: "メッセージを入力して下さい" , size: 50, class:"form-text-field" %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "投稿",class: 'form-submit'%>
<% end %>