<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>ログイン</h2>
      <h5 class="ml-3">会員の方はこちらからログイン</h5>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <table class="table table-borderless mt-3">
          <tr>
            <td class="text-center"><%= f.label :email, 'メールアドレス' %></td>
            <td class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
            </td>
          </tr>
          <tr>
            <td class="text-center"><%= f.label :password, 'パスワード' %></td>
            <td class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </td>
          <tr>
            <td></td>
            <td class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary btn-md" %>
            </td>
          </tr>
        </table>
      <% end %>
      <div>
        <h2>会員登録がお済みでない方</h2>
        <div class="ml-5">
          <%= link_to "こちら", new_user_registration_path %>
          <span>　から新規登録を行ってください。</span>
        </div>
      </div>
    </div>
  </div>
</div>
