<div class="container">
  <div class="row py-3">
    <h4 class="col-md-2">ユーザー情報</h4>
    <%= link_to "編集する", edit_user_path, class:"btn btn-success btn-md" %>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <tr>
          <td class="col-md-3 bg-light">氏名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td class="bg-light">自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td class="bg-light">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </table>
    </div>
  </div>
</div>