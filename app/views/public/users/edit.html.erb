<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= render 'layouts/error_messages', obj: @user %>
      <h4>会員情報編集</h4>
      <%= form_with model: @user do |f| %>
      <table class="table table-borderless mb-5">
        <tr>
          <td>ユーザーネーム</td>
          <td><%= f.text_field :name, class: "form-control" %></td>
          <td></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= f.text_field :introduction, class: "form-control" %></td>
          <td></td>
        </tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, class: "form-control" %></td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
          <td><%= link_to "退会する", user_confirm_path(@user), class: "btn btn-danger btn-md" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>