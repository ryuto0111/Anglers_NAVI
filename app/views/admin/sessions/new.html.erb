<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>管理者ログイン</h2>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <table class="table table-borderless mt-3">
          <tr>
            <td class="text-center"><%= f.label :email, 'メールアドレス' %></td>
            <td class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
            </td>
          </tr>
          <tr>
            <td class="text-center"><%= f.label :password, 'パスワード' %></td>
            <td class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </td>
          <tr>
            <td></td>
            <td class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary btn-md" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
<%= render "admin/shared/links" %>
