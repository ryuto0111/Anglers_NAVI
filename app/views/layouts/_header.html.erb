<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <div class="header-logo">
        <%= link_to root_path do %>
          <%= image_tag 'header-logo.png', size: "200x80" %>
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li>
              <%= link_to "投稿一覧", admin_posts_path, class: 'btn navbar-btn btn-outline-light' %>
            </li>
            <li>
              <%= link_to "ユーザー一覧", admin_users_path, class: 'btn navbar-btn btn-outline-light ml-3'%>
            </li>
            <li>
              <%= link_to "タグ一覧", admin_tags_path, class: 'btn navbar-btn btn-outline-light ml-3'%>
              </li>
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'btn navbar-btn btn-outline-light ml-3' do %>
                ログアウト
              <% end %>
            </li>
          <% elsif user_signed_in? %>
            <li>
               <%= link_to "マイページ", user_path(current_user), class: 'btn navbar-btn btn-outline-light ml-5' %>
            </li>
            <li>
              <%= link_to "投稿一覧", posts_path, class: 'btn navbar-btn btn-outline-light ml-3' %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class: 'btn navbar-btn btn-outline-light ml-3' do %>
                ログアウト
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to "About", about_path, class: 'btn navbar-btn btn-outline-light' %>
            </li>
            <li>
              <%= link_to "新規登録",new_user_registration_path , class: 'btn navbar-btn btn-outline-light ml-3' %>
            </li>
            <li>
              <%= link_to "ログイン", new_user_session_path , class: 'btn navbar-btn btn-outline-light  ml-3' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
